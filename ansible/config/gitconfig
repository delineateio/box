[alias]
	initial = !git rebase -i --root $(git rev-parse --abbrev-ref HEAD)
	last = !git log --format=%B -1
	pretty = !git log --pretty=oneline --abbrev-commit -n 10
	root = cd $(git rev-parse --show-toplevel)
[commit]
	template = ~/.gitmessage
	gpgsign=true
[core]
	editor = nano
	excludesfile = ~/.gitignore_global
	pager = cat
[gpg]
	program=gpg2
[pull]
	ff=only
